{
  "name": "rice-mill-erp-backend",
  "version": "1.0.0",
  "description": "Multi-tenant Rice Mill ERP Backend API with offline-first capabilities",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "seed:admin": "node src/seeders/superAdminSeeder.js",
    "db:seed": "npm run seed:admin",
    "build": "echo 'No build step required for Node.js'",
